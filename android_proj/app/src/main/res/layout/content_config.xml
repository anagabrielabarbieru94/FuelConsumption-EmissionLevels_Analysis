<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_config"
        tools:context=".ConfigActivity">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/configText"
                          android:text="@string/car_detail"
                          android:textStyle="bold"
                          android:layout_margin="@dimen/activity_vertical_margin"
                          android:fontFamily="sans-serif-condensed-medium"/>

                <Spinner android:id="@+id/carManufacturer"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@id/configText">
                        Choose Car Manufacurer
                </Spinner>

                <Spinner android:id="@+id/carModel"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@id/carManufacturer">
                        Choose Car Model
                </Spinner>

                <Spinner android:id="@+id/euroStandard"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@id/carModel">
                        Choose Car Model
                </Spinner>

        </RelativeLayout>

</android.support.constraint.ConstraintLayout>